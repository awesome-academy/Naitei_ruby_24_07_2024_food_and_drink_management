<%= form_for([product, review], url: review.persisted? ? product_review_path(product, review) : product_reviews_path(product) , html: { class: "space-y-4" }) do |f| %>
  <%= render "shared/error_messages" , f: f %>
  <div>
    <%= f.label :rating, t("reviews.input_star") , class: "block text-gray-700" %>
      <div class="flex items-center space-x-1" id="star-rating">
        <% Review.ratings.each do |rating, value| %>
          <svg class="star w-8 h-8 text-gray-400" data-rating="<%= value %>" xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24" fill="currentColor">
            <path fill-rule="evenodd"
              d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.006 5.404.434c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.434 2.082-5.005Z"
              clip-rule="evenodd" />
          </svg>
        <% end %>
      </div>

      <%= f.hidden_field :rating, id: "rating" , value: f.object.rating %>
      <%= f.text_area :comment, class: "mt-4 p-2 border rounded w-full" , placeholder: t("reviews.input_comment") %>
  </div>

  <%= f.submit t("reviews.send") , class: "bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600" %>
<% end %>
