<div class="flex justify-center">
  <div class="w-full max-w-md">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" do %>
          <%= t("password_reset.email_label") %>
        <% end %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>
      <div class="actions">
        <%= f.submit t("password_reset.submit_button"), class: "w-full bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
