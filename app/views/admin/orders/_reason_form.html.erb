<%= form_for order, url: admin_order_path(id: order.id, type: "cancel"), :method => :patch , html: { class: "p-6 space-y-4", id: 'cancel-order-form' } do |f| %>
  <div>
    <%= f.label :reason, t("orders.cancel_reason_label"), class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
    <%= f.text_area :reason, rows: 4, class: "block w-full mt-1 p-2.5 border border-gray-300 rounded-md dark:bg-gray-700 dark:border-gray-600 dark:text-white", placeholder: t("orders.cancel_reason_placeholder") %>
  </div>
  <div class="flex items-center justify-end space-x-4">
    <button type="button" data-modal-hide="reason-modal" class="text-gray-900 bg-white border border-gray-300 rounded-lg px-5 py-2.5 hover:bg-gray-100 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">
    <%= t("orders.cancel_button") %>
    </button>
    <%= f.submit t("orders.submit_button"), class: "text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-red-500 dark:hover:bg-red-600 dark:focus:ring-red-800", data: { confirm: t("orders.cancel_confirm") } %>
  </div>
<% end %>
