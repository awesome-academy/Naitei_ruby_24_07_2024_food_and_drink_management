<% provide :title, "Danh sách sản phẩm" %>

<h1 class="text-3xl font-bold mb-4">Danh sách sản phẩm</h1>

<div class="mb-4">
  <%== pagy_nav(@pagy) %>
</div>

<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
  <% @products.each do |product| %>
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
      <img class="w-20 h-28 object-cover" src="<%= product.image_url %>" alt="<%= product.name %>">
      <div class="p-4">
        <div class="flex justify-between items-center">
          <span class="bg-red-500 text-white text-xs px-2 py-1 rounded"><%= product.discount %>%</span>
          <span class="line-through text-gray-500 text-sm">
            <%= number_to_currency((product.price / (1 - product.discount.to_f / 100)), unit: "₫") %>
          </span>
        </div>
        <h2 class="text-xl font-bold mt-2"><%= product.name %></h2>
        <p class="text-green-600 text-lg mt-2"><%= number_to_currency(product.price, unit: "₫") %></p>
        <button class=" bg-green-600 text-white py-2 mt-4 rounded">Thêm vào giỏ</button>
      </div>
    </div>
  <% end %>
</div>

<div class="mt-4 flex justify-center items-center  ">
  <%== pagy_nav(@pagy) %>
</div>

