<% provide :title, t("products.title") %>

<h1 class="text-3xl font-bold mb-4"><%= t("products.title") %></h1>
<%= form_for :search, url: products_path, method: :get, html: { class: "flex items-center" } do |f| %>
  <%= f.select :category_id, options_for_select(Category.pluck(:name, :id), selected: params[:category_id] || nil), { prompt: t("products.category_filter") }, class: "bg-white border border-gray-300 rounded-full py-2 px-3" %>
  <button type="submit" class="ml-2 bg-green-600 text-white py-2 px-4 rounded-full"><%= t("products.filter_button") %></button>
<% end %>

<h1 class="text-3xl font-bold mb-4"><%= t("products.title") %></h1>
<% if params.dig(:search,:query).present? || params.dig(:search,:category_id).present? %>
  <div class="mb-4">
    <%= form_for :search, url: products_path, method: :get, html: { class: "flex items-center" } do |f| %>
      <%= f.hidden_field :query, value: params[:search][:query] if params[:search][:query].present? %>
      <%= f.hidden_field :category_id, value: params[:search][:category_name] if params[:search][:category_name].present? %>
      <%= f.number_field :min, placeholder: t("products.min_price"), class: "w-24 py-2 px-3 border border-gray-300 rounded-full", value: params.dig(:search, :min) %>
      <%= f.number_field :max, placeholder: t("products.max_price"), class: "w-24 py-2 px-3 border border-gray-300 rounded-full", value: params.dig(:search, :max) %>
      <button type="submit" class="ml-2 bg-green-600 text-white py-2 px-4 rounded-full"><%= t("products.filter_button") %></button>
    <% end %>
  </div>
<% end %>

<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
  <% @products.each do |product| %>
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
      <img class="w-20 h-28 object-cover" src="<%= product.image_url %>" alt="<%= product.name %>">
      <div class="p-4">
        <div class="flex justify-between items-center">
          <span class="bg-red-500 text-white text-xs px-2 py-1 rounded"><%= product.discount %>%</span>
          <span class="line-through text-gray-500 text-sm">
            <%= number_to_currency((product.price_cents / (1 - product.discount.to_f / 100)), unit: "₫") %>
          </span>
        </div>
        <h2 class="text-xl font-bold mt-2"><%= product.name %></h2>
        <p class="text-green-600 text-lg mt-2"><%= number_to_currency(product.price_cents, unit: "₫") %></p>
        <button class=" bg-green-600 text-white py-2 mt-4 rounded">Thêm vào giỏ</button>
      </div>
    </div>
  <% end %>
</div>

