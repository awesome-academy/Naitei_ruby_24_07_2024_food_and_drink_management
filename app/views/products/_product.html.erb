    <div class="bg-white shadow-md rounded-lg overflow-hidden">
      <img class="w-20 h-28 object-cover" src="<%= product.image_url %>" alt="<%= product.name %>">
      <div class="p-4">
        <div class="flex justify-between items-center">
          <span class="bg-red-500 text-white text-xs px-2 py-1 rounded"><%= product.discount %>%</span>
          <span class="line-through text-gray-500 text-sm">
            <%= t "products.original_price" %>: 
            <%= number_to_currency((product.price / (1 - product.discount.to_f / 100)), unit: "₫") %>
          </span>
        </div>
        <%=link_to product.name, product_path(product), class: "text-xl font-bold mt-2"  %>
        <p class="text-green-600 text-lg mt-2"><%= t "products.price"  %>: <%= number_to_currency(product.price, unit: "₫") %></p>
        <button class="bg-green-600 text-white py-2 mt-4 rounded"><%= t "products.add_to_cart" %></button>
      </div>
    </div>
